#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/**
 * main - Entry point
 * Description: Is it positive or negative
 * Return: Always 0 (Success)
 */
int main(void)
{
int n;
srand(time(0));
n = rand() - RAND_MAX / 2;
printf("%d is", n);
if (n > 0)
{
printf("%d is positive\n, n");
}
else
{
if (n == 0)
{
printf("is zero\n");
}
else
{
printf("is negative\n");
}
}
return (0);
}
